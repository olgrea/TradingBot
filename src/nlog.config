<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      throwConfigExceptions="true">

	<variable name="baseDir" value="D:\logs"/>
	<variable name="baseDirWithDate" value="${baseDir}\${shortdate}"/>
    <targets>
        <target name="global" xsi:type="File" fileName="${baseDir}\global.log" 
				layout="${longdate}|${level:uppercase=true}|${logger}|${callsite}|${message} ${exception:format=StackTrace}"/>
        <target name="reports" xsi:type="File" fileName="${baseDirWithDate}\${event-properties:item=ticker}-report.log"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=StackTrace}"/>
        <target name="logconsole" xsi:type="Console" 
				layout="${level:uppercase=true}|${logger}|${message} ${exception:format=StackTrace}"/>
        <target name="internal" xsi:type="File" fileName="${baseDir}\nlog-internal.log" />
    </targets>

    <rules>
		<logger name="Trader-*" minlevel="Info" writeTo="reports" />
        <logger name="*" minlevel="Trace" writeTo="global" />
        <logger name="*" minlevel="Info" writeTo="logconsole" />
		<!--<logger name="Backtester" minlevel="Info" writeTo="reports" />-->
    </rules>
</nlog>