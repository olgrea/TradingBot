<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      throwConfigExceptions="true">
	<extensions>
		<add assembly="NLog.TradingBot"/>
	</extensions>
	
	<variable name="logsDir" value="C:\tradingbot\logs"/>
	<variable name="now" value="${event-properties:now:whenEmpty=${time}}"/>
	
	<variable name="CallsiteLayout" value="${longdate}|${level:uppercase=true}|${callsite:includeNamespace=False}|${message:withException=true} ${exception:format=StackTrace}"/>
	<variable name="SimpleLayout" value="${longdate}|${level:uppercase=true}|${message}"/>
	
    <targets>

		<target name="global" xsi:type="File" fileName="${logsDir}\${shortdate}\global.log" layout="${CallsiteLayout}"/>
		
		<target name="filelog" xsi:type="File" fileName="${logsDir}\${shortdate}\${logger}.log" layout="${CallsiteLayout}"/>
		<target name="consoleDebug" xsi:type="Console" layout="${CallsiteLayout}"/>
		<target name="consoleInfo" xsi:type="Console" layout="${SimpleLayout}"/>

		<target name="reports" xsi:type="File" fileName="${logsDir}\${shortdate}\${logger}.csv">
			<layout xsi:type="CsvLayout" delimiter="Semicolon" withHeader="true">
				<column name="time" layout="${event-properties:time}"/>
				<column name="strat" layout="${event-properties:strat}"/>
				<column name="action" layout="${event-properties:action}"/>
				<column name="qty" layout="${event-properties:qty}"/>
				<column name="price" layout="${event-properties:price}"/>
				<column name="total" layout="${event-properties:total}"/>
				<column name="commission" layout="${event-properties:commission}"/>
				<column name="realized" layout="${event-properties:realized}"/>
			</layout>
		</target>
		
		<target name="nunitlogs" xsi:type="NunitLogger" layout="${CallsiteLayout}"/>
		<target name="System.Diagnostics.Debug" xsi:type="DebugSystem" layout="${CallsiteLayout}" />
		
    </targets>

    <rules>

		<logger name="NUnitLogger" minlevel="Trace" writeTo="nunitlogs" />
		<logger name="*" minlevel="Debug" writeTo="filelog" />
		<logger name="*" minlevel="Debug" writeTo="System.Diagnostics.Debug" />
		<logger name="*" minlevel="Debug" writeTo="global" />
		
		<logger name="*Trace" minlevel="Trace" writeTo="consoleDebug" final="true"/>
		<logger name="*Debug" minlevel="Debug" writeTo="consoleDebug" final="true"/>
		<logger name="*" minlevel="Info" writeTo="consoleInfo"/>
		
	</rules>
</nlog>